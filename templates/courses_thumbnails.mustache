{{!
    @template theme_imtpn/courses_thumbnails

    This template renders the main content area for the courses thumbnails.

    Example context (json):
    {}
}}

<div id="courses-thumbnails-{{uniqid}}" class="courses-thumbnails card-deck dashboard-card-deck">
    <div class="container">
        <div class="row">
            {{#courses}}
                <div class="card dashboard-card card-course" role="listitem" data-region="course-content">
                    <a href="{{viewurl}}" class="course-image"
                       style='background-image: url("{{{courseimage}}}");'> </a>

                    <div class="title font-weight-bolder">{{ fullname }}</div>
                    <div class="link-go-to-content">
                        <a class="btn btn-primary rounded-circle p-2" href="{{viewurl}}">
                            <img src="/theme/imtpn/pix/icons/right-arrow.svg" alt="">
                        </a>
                    </div>
                    <div class="card-footer dashboard-card-footer border-0 bg-white">
                    </div>
                </div>
            {{/courses}}
        </div>
    </div>
</div>