{{!
    @template block_myoverview/view-list

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "entities": [
            {
                "fullname": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "image": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "category": "Miscellaneous",
                "visible": true
            }
        ]
    }
}}

<ul class="list-group">
    {{#entities}}
        <li class="list-group-item entity-listitem"
            data-region="entity-content"
            data-entity-id="{{{id}}}">
            <div class="row">
                <div class="col-md-11 col-md-11 d-flex align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="text-muted muted d-flex flex-wrap">
                        <span class="sr-only">
                            {{#str}}aria:category, local_resourcelibrary{{/str}}
                        </span>
                            <span class="categoryname">
                                {{{categoryname}}}
                            </span>
                            {{#showshortname}}
                                <div class="pl-1 pr-1">|</div>
                                <span class="sr-only">
                                    {{#str}}aria:shortname, local_resourcelibrary{{/str}}
                                </span>
                                <div>{{{shortname}}}</div>
                            {{/showshortname}}
                        </div>
                        {{#iconurl}}
                            <img class="list-image p-2" src="{{{iconurl}}}" alt="{{#str}}aria:entityimage, local_resourcelibrary{{/str}}">
                        {{/iconurl}}
                        <span class="sr-only">
                            {{#str}}aria:fullname, local_resourcelibrary{{/str}}
                        </span>
                        <span class="item-name p-x-1">
                            {{{fullname}}}
                        </span>
                        <a class="sharing-cart-icon" data-module-id="{{ id }}" data-activity-name="{{ fullname }}">
                            <i class="fa fa-shopping-basket icon"></i>
                        </a>
                        {{^visible}}
                            <div class="d-flex flex-wrap">
                                <span class="tag tag-info">{{#str}} hiddenfromstudents, local_resourcelibrary {{/str}}</span>
                            </div>
                        {{/visible}}
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <a href="{{viewurl}}" class="item-view">
                        <span class="fa fa-arrow-circle-o-right fa-2x"></span>
                    </a>
                </div>
            </div>
        </li>
    {{/entities}}
</ul>
