{{!
    @template block_mcms/layout_one

    This template renders the main content area for the mcms block.

    Example context (json):
    {}
}}

<div id="block-mcms-{{uniqid}}" class="block-mcms block-cards pt-5 pb-5">
    <div class="d-flex flex-row justify-content-center inner-block">

        <div style="background-image: url({{iconurl}});" class="blockicon d-none d-sm-block"></div>

        <div class="text-content position-relative">
            {{#decorations}}
                <div class="{{.}}" style="position:absolute;"></div>
            {{/decorations}}
            {{#title}}<h3>{{.}}</h3>{{/title}}
            <div class="pb-5">
                {{{descriptionhtml}}}
            </div>
        </div>
    </div>
</div>