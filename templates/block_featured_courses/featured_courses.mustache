{{!
    @template block_thumblinks_action/thumblinks_actions

    This template renders the main content area for the mcms block.

    Example context (json):
    {}
}}

<div id="block-featured-courses-{{uniqid}}" class="block-featured-courses block-cards">
    {{#courses}}
        <div class="thumbnail my-1 d-flex flex-column justify-content-start p-0 card-course">
            <div class="course-image"
                    style='background-image: url("{{{ courseimage}}}");'>
            </div>
            <div class="title font-weight-bolder">{{ fullname }}</div>

            <div class="link-go-to-content">
                <a class="btn btn-primary rounded-circle p-2" href="{{viewurl}}">
                    <img src="{{config.wwwroot}}/theme/imtpn/pix/icons/right-arrow.svg" alt="">
                </a>
            </div>

        </div>
    {{/courses}}
</div>